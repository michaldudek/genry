<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <title>{% block page_title %}Genry Static Page Generator{% endblock %}</title>
    <meta name="description" content="{% block page_description %}Genry is a static page generator that uses Twig templating system.{% endblock %}">
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/es5-shim/2.0.8/es5-shim.min.js"></script>
    <![endif]-->

    {{ stylesheet('/assets/css/lib/bootstrap.css', 'lib') }}
    {#{ stylesheet('/assets/css/lib/font-awesome.css', 'lib') }#}
    {#{ stylesheet('/assets/css/global.css', 'app') }#}

    {{ stylesheets() }}
</head>

<body>

    <a href="https://github.com/michaldudek/genry" target="_blank"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png"></a>

    {% block body %}
        <div class="container">
            {% block content %}
            {% endblock %}
        </div>
    {% endblock %}

    {#{ javascript('/assets/components/jquery/dist/jquery.min.js', 'lib') }#}
    {#{ javascript('/assets/js/global.js', 'app') }#}

    {{ javascripts() }}
</body>
</html>